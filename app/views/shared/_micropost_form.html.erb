<%= form_for @micropost do |f| %>
  <%= render "shared/error_messages", object: f.object %>
  <div class="field">
    <%= f.text_area :content, placeholder: t("microposts.new.placeholder") %>
  </div>
  <%= f.submit t("btn_submit"), class: "btn btn-primary" %>
  <span class="image">
  <%= f.file_field :image, accept: Settings.validations.post.content_type_image %>
  </span>
<% end %>
